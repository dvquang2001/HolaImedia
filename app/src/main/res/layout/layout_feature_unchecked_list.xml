<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCircleDonChoXacNhan"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/circle_purple_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDonChoXacNhan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_box"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleDonChoXacNhan"
        app:layout_constraintEnd_toEndOf="@id/ivCircleDonChoXacNhan"
        app:layout_constraintStart_toStartOf="@id/ivCircleDonChoXacNhan"
        app:layout_constraintTop_toTopOf="@+id/ivCircleDonChoXacNhan" />

    <TextView
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCircleDonChoXacNhan"
        android:text="@string/list_confirmation"
        android:layout_width="72dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>