<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCircleDanhSachDonHang"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/circle_purple_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icDanhSachDonHang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_todo_list"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleDanhSachDonHang"
        app:layout_constraintEnd_toEndOf="@id/ivCircleDanhSachDonHang"
        app:layout_constraintStart_toStartOf="@id/ivCircleDanhSachDonHang"
        app:layout_constraintTop_toTopOf="@+id/ivCircleDanhSachDonHang" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Danh sách đơn hàng"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCircleDanhSachDonHang" />

</androidx.constraintlayout.widget.ConstraintLayout>