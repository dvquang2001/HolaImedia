<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.digital.bill_payment.BillpaymentMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán hóa đơn dịch vụ"
            android:textColor="@color/teal_200"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bill" />

        <Button
            android:id="@+id/btn_pm_elec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thanh toán tiền điên" />

        <Button
            android:id="@+id/btn_pm_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán tiền nước" />

        <Button
            android:id="@+id/btn_pm_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán tiền internet" />

        <Button
            android:id="@+id/btn_add_user_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>