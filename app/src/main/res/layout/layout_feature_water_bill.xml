<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCircleWater"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/circle_purple_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivWater"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/water_tap"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleWater"
        app:layout_constraintEnd_toEndOf="@id/ivCircleWater"
        app:layout_constraintStart_toStartOf="@id/ivCircleWater"
        app:layout_constraintTop_toTopOf="@+id/ivCircleWater" />

    <TextView
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCircleWater"
        android:text="@string/water"
        android:layout_width="72dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>